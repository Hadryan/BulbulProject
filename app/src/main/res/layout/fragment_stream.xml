<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context="com.bulbulproject.bulbul.fragment.StreamFragment"
    android:background="@android:color/background_light"
    android:id="@+id/player">

    <TextView
        android:id="@+id/player_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/player_artist_name"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_song_title"
        android:gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/player_artist_name"
        android:gravity="center_horizontal"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp">


        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@color/colorPrimary"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/button_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/button_previous"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:src="@android:drawable/ic_media_play"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/button_action"
            android:background="@color/colorPrimary"
            android:src="@android:drawable/ic_media_next" />

    </RelativeLayout>

</RelativeLayout>

